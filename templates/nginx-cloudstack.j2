server {
    listen 443 ssl;
    server_name ~^(?<ip_octet1>\d+)-(?<ip_octet2>\d+)-(?<ip_octet3>\d+)-(?<ip_octet4>\d+)\.{{ cloudstack_ssvm_hostname | replace('.', '\\.') }}$;

    ssl_certificate {{ cloudstack_ssvm_tlscert }};
